@model ChopUrl.Models.URL

@{ ViewData["Title"] = "Shrink a Link"; }

<h2>Index</h2>

<form asp-action="Index">
    <div class="form-horizontal">
        <h4>URL Helper</h4>
         <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="url" name="longUriStr" value="@Model.LongUri" class="input-lg" />
               
                <input type="submit" value="GetShortURL" class="btn btn-default" />
                <table class="table table-condensed table-hover">
                    <thead>
                        <tr><th>Shorten URL</th></tr>
                        <tr>
                            <th>@Html.DisplayNameFor(e => e.LongUri)</th>
                            <th>@Html.DisplayNameFor(e => e.ShortUri)</th>
                            <th>@Html.DisplayNameFor(e => e.Id)</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var urll in ViewBag.listUrl)
                        {
                            <tr>
                                <td>@urll.LongUri</td>
                                <td>@urll.ShortUri</td>
                                <td>@urll.Id</td>
                                
                            </tr>

                        }
                    </tbody>
                </table>

                @if (Model != null)
                {
            <p>@Model.LongUri </p>
                            <p>@Model.ShortUri</p>}
            </div>
        </div>
    </div>
</form>

